<Page x:Class="Практическая_работа_4_Новиков_Соболенко.Page2"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Ветвление">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Задание 2. Вычисление функции e" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <Border BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,10" Height="50">
                <Image Source="Image\2.png"/>
            </Border>
            <TextBlock Text="Введите X:"/>
            <TextBox Name="TxtX" Margin="0,0,0,5"/>

            <TextBlock Text="Введите i (целое число):"/>
            <TextBox Name="TxtI" Margin="0,0,0,10"/>

            <GroupBox Header="Выберите функцию f(x)" Margin="0,0,0,10">
                <StackPanel>
                    <RadioButton Name="RbSh" Content="sh(x)" IsChecked="True"/>
                    <RadioButton Name="RbSqr" Content="x^2"/>
                    <RadioButton Name="RbExp" Content="e^x"/>
                </StackPanel>
            </GroupBox>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="Вычислить" Click="BtnCalc_Click" Width="100" Margin="0,0,10,0"/>
                <Button Content="Очистить" Click="BtnClear_Click" Width="100"/>
            </StackPanel>

            <TextBlock Text="Результат:"/>
            <TextBox Name="TxtResult" IsReadOnly="True" Background="#F0F0F0"/>
        </StackPanel>
    </Grid>
</Page>
