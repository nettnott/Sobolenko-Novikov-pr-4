<Page x:Class="Практическая_работа_4_Новиков_Соболенко.Page3"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Цикл и график">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,0,10,0">
            <TextBlock Text="Задание 3" FontSize="16" FontWeight="Bold"/>
            <Border BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,10" Height="50">
                <Image Source="Image\3.png"/>
            </Border>
            <TextBlock Text="X начальное:"/>
            <TextBox Name="TxtX0" Text="4,6"/>

            <TextBlock Text="X конечное:"/>
            <TextBox Name="TxtXk" Text="5,8"/>

            <TextBlock Text="Шаг dx:"/>
            <TextBox Name="TxtDx" Text="0,2"/>

            <TextBlock Text="Параметр b:"/>
            <TextBox Name="TxtB" Text="1,3" Margin="0,0,0,10"/>

            <Button Content="Вычислить" Click="BtnCalc_Click" Margin="0,0,0,5"/>
            <Button Content="Очистить" Click="BtnClear_Click" Margin="0,0,0,10"/>

            <TextBlock Text="Таблица значений:"/>
            <TextBox Name="TxtOutput" Height="150" AcceptsReturn="True" 
                     VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>
        </StackPanel>

        <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1" ClipToBounds="True">
            <Canvas Name="GraphCanvas" Background="White"/>
        </Border>
    </Grid>
</Page>